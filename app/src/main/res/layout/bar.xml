<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/msg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp">

    <ImageButton
        android:id="@+id/logout_button_1"
        android:layout_width="46dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_settings_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_move_to_inbox_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/logout_button_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:fontFamily="casual"
        android:text="Group Messaging"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="26dp"
        android:layout_height="20dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/rounded_rectangle_orange"
        android:text="22"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/imageButton5"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>